{
  "name": "coda-mcp-http",
  "version": "1.0.0",
  "description": "MCP Server for Coda with HTTP/Streamable HTTP support for LangSmith Agent Builder",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "coda-mcp-http": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/http-server.js",
    "start:stdio": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev:http": "tsx src/http-server.ts",
    "dev:stdio": "tsx src/index.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "openapi-ts": "openapi-ts"
  },
  "dependencies": {
    "@hey-api/client-axios": "^0.7.0",
    "@modelcontextprotocol/sdk": "^1.11.2",
    "axios": "^1.9.0",
    "zod": "^3.24.4",
    "express": "^4.19.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.17",
    "@hey-api/openapi-ts": "^0.67.3",
    "prettier": "^3.5.3",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.5.1",
  "keywords": [
    "mcp",
    "coda",
    "langsmith",
    "agent-builder",
    "http",
    "streamable-http"
  ],
  "author": "Samuel Audette",
  "license": "MIT"
}
